<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_university"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bubt"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_university_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_university"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            tools:text="BUBT Campus"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_university_district_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv_university_name"
            app:layout_constraintTop_toBottomOf="@id/tv_university_name"
            android:layout_marginTop="10dp"
            android:text="@string/av_district"
            android:textColor="@color/grey"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_university_district_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_university_district_label"
            app:layout_constraintTop_toBottomOf="@id/tv_university_name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            tools:text="Tanahun"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_university_chief_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv_university_district_label"
            app:layout_constraintTop_toBottomOf="@id/tv_university_district_label"
            android:layout_marginTop="10dp"
            android:text="@string/chief_title"
            android:textColor="@color/grey"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_university_chief_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_university_chief_label"
            app:layout_constraintTop_toBottomOf="@id/tv_university_district_label"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            tools:text="Rishi K.C"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_university_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_university"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="15dp"
            tools:text="rahimbadsha.cse@gmail.com"
            android:drawablePadding="5dp"
            android:textColor="@color/blue"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:drawableStart="@drawable/ic_email_black_24dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_university_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_university"
            app:layout_constraintStart_toEndOf="@id/tv_university_email"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="25dp"
            tools:text="01632888127"
            android:drawablePadding="5dp"
            android:textColor="@color/blue"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:drawableStart="@drawable/ic_phone_black_24dp"
           />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>