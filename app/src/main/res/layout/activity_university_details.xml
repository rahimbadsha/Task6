<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UniversityDetails">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_details_versity"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/bubt"
        android:scaleType="centerCrop"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_details_university_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_details_versity"
        app:layout_constraintStart_toStartOf="@id/iv_details_versity"
        tools:text="BUBT Campus"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_details_university"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_details_university_name"
        app:layout_constraintStart_toStartOf="@id/tv_details_university_name"
        android:text="@string/chief_title"
        android:textSize="18sp"
        android:textColor="@color/grey"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/iv_details_versity"
        app:layout_constraintTop_toBottomOf="@+id/tv_details_university"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp"
        android:foreground="@color/grey"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:padding="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_details_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/campus_chief"
                android:textSize="18sp"
                android:textColor="@color/grey"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_details_chief_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tv_details_name_title"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Abdur Rahim"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_details_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_details_name_title"
                app:layout_constraintStart_toStartOf="@+id/tv_details_name_title"
                android:text="@string/details_phone_label"
                android:textSize="18sp"
                android:textColor="@color/grey"
                android:layout_marginTop="10dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_details_phone_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tv_details_phone"
                app:layout_constraintTop_toBottomOf="@+id/tv_details_chief_value"
                tools:text="01632888127"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_details_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_details_phone"
                app:layout_constraintStart_toStartOf="@+id/tv_details_phone"
                android:text="@string/av_details_email"
                android:textSize="18sp"
                android:textColor="@color/grey"
                android:layout_marginTop="10dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_details_email_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tv_details_email"
                app:layout_constraintTop_toBottomOf="@+id/tv_details_phone_value"
                tools:text="rahim.cse@gmail.com"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_details_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_details_email"
                app:layout_constraintStart_toStartOf="@+id/tv_details_email"
                android:text="@string/av_district"
                android:textSize="18sp"
                android:textColor="@color/grey"
                android:layout_marginTop="10dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_details_district_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tv_details_district"
                app:layout_constraintTop_toBottomOf="@+id/tv_details_email_value"
                android:textColor="@color/black"
                tools:text="Dhaka"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>